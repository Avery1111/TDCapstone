    <script type="text/javascript">
        // Status Bar 
        // Need a way to pass a number value for which part of lifecycle customer is on
        // Like if wating for phone call value will be a number that puts status bar in bewteen Phone call label - Noah
        function SetStatus(value) {
            var divStatus = document.getElementById('divStatus');
            divStatus.style.width = value + "%";
        }
    </script>
